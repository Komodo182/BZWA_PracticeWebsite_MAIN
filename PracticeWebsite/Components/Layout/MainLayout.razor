            </ChildContent>
        </MudMenu>
        <MudSpacer />
        
        <MudButton Variant="Variant.Filled" Style="@($"color:{Colors.Shades.White} ; background:{Colors.Green.Darken3};")" Href="/">Book Tickets!</MudButton>
        <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Inherit" OnClick="@((e) => LoginToggle())" />
        <MudPopover Open="@_login" Fixed="true" Class="px-4 pt-4" AnchorOrigin = "Origin.TopRight" TransformOrigin = "Origin.TopRight">
            <div class="d-flex flex-column">
                <MudForm @ref="LoginTicket" @bind-IsValid="@success" @bind-Errors="@errors">
                    <MudTextField T="string" Label="Username/Email" Required="true" RequiredError="Username or an Email is required!" />
                    <MudTextField T="string" Label="Password" Required="true" HelperText="Please input the password to the account." @ref="pwField1" InputType="InputType.Password" RequiredError="Password is required!"/>
                    <div class="d-flex align-center justify-space-between">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto">Log in</MudButton>
                    </div>
                </MudForm>
                Dont have an account? 
                <a href="/register"> Sign up!</a>
            </div>
        </MudPopover>    
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
