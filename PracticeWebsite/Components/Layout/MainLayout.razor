        </MudMenu>
        <MudSpacer />

        <MudMenu Label="More" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
            <ActivatorContent>
                <MudChip T="string" Size="Size.Large" Variant="Variant.Outlined" Color="Color.Dark">More</MudChip>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Href="/">Opening Times</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/">How to get here</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/">Accessibility</MudMenuItem>
                <MudDivider />
