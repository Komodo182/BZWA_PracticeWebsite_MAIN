@inherits LayoutComponentBase
@inject PracticeWebsite.Services.CustomerServices CustomerService
@inject NavigationManager NavigationManager
@using PracticeWebsite.Utilities
@inject UserSession UserSession
@rendermode InteractiveServer
@using PracticeWebsite.Models
@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation = "10" Style="@($"background:{Colors.LightGreen.Darken2};")">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <a href="/">The Zoo!</a>
        <MudSpacer />

        <MudMenu Label="Book/Buy" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
            <ActivatorContent>
                <MudChip T="string" Size="Size.Large" Variant="Variant.Outlined" Color="Color.Dark">Book/Buy</MudChip>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Href="/tickets">Park Admission Tickets</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/membership">Memberships</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/membership/requirements">Members Admission</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/animals/rangerexperience">The Real Ranger Experience</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/gifts">Gift Shop</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/gifts/adoptananimal">Adobt an Animal</MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudSpacer />

        <MudMenu Label="Explore" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
            <ActivatorContent>
                <MudChip T="string" Size="Size.Large" Variant="Variant.Outlined" Color="Color.Dark">Explore</MudChip>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Href="/animals"> Animals </MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/animals/experience"> Animal Experiences </MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/events"> Shows & Ranger Talks </MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/events/special"> Special Events </MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/map"> Park Map </MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/hotel/experience"> Stay at the Hotel </MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudSpacer />

        <MudMenu Label="Venue Hire" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
            <ActivatorContent>
                <MudChip T="string" Size="Size.Large" Variant="Variant.Outlined" Color="Color.Dark">Venue Hire</MudChip>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Href="/venue/wedding">Weddings</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/venue/hospitality">Corporate Hospitality</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/">Team Building</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/venue/business">Meetings & Conferences</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/venue">Private Parties</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/educationalvisit">Educational Visits</MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudSpacer />

        <MudMenu Label="More" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
            <ActivatorContent>
                <MudChip T="string" Size="Size.Large" Variant="Variant.Outlined" Color="Color.Dark">More</MudChip>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Href="/openingtimes">Opening Times</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/howtogethere">How to get here</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/policies/accessibility">Accessibility</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/policies">Policies</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/contact">Contact</MudMenuItem>
                <MudDivider />
                <MudMenuItem Href="/faqs">FAQs</MudMenuItem>
            </ChildContent>
        </MudMenu>
        <MudSpacer />

        <MudButton Variant="Variant.Filled" Style="@($"color:{Colors.Shades.White} ; background:{Colors.Green.Darken3};")" Href="/tickets">Book Tickets!</MudButton>

        <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Inherit" OnClick="@((e) => LoginToggle())" />
        <MudPopover Open="@_login" Fixed="true" Class="px-4 pt-4" AnchorOrigin = "Origin.TopRight" TransformOrigin = "Origin.TopRight">
            <MudCard Elevation="0">
                <div class="d-flex flex-column">
                    <EditForm Model="@LogInCustomer" OnValidSubmit="HandleValidSubmit" FormName="LogInTicket">
                        <DataAnnotationsValidator/>
                        <ValidationSummary/>
                        <MudGrid>
                            <MudItem>
                                <MudCard Elevation="0">
                                    <MudCardContent>
                                        <MudTextField T="string" ShrinkLabel Label="Username" Required="true" 
                                            @bind-Value="LogInCustomer.Username" RequiredError=" Username or an Email is required!" />
                                        <MudTextField T="string" ShrinkLabel Label="Password" Required="true"
                                            @bind-Value="password" @ref="pwField1" InputType="InputType.Password" RequiredError="Password is required!"/>
                                        <MudCardActions>
                                            <div class="d-flex align-center justify-space-between">
                                                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Disabled="@(!success)" Class="ml-auto">Log in</MudButton>
                                            </div>
                                        </MudCardActions>
                                    </MudCardContent>
                                </MudCard>
                            </MudItem>
                        </MudGrid>
                    </EditForm>
                    Dont have an account? 
                    <a href="/register"> Sign up!</a>
                </div>
            </MudCard>
        </MudPopover> 
        
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private Customer LogInCustomer = new Customer();
    private string password;
    bool _drawerOpen = false;
    private bool _login;
    bool employee = true;
    bool success;
    string[] errors = { };
    MudTextField<string> pwField1;
    MudForm LoginTicket;

    void DrawerToggle()
    {
        if (employee == false)
        {
            return;
        }
        else
        {
            _drawerOpen = !_drawerOpen;
        }
    }

    private void LoginToggle() => _login = !_login;
    private async Task HandleValidSubmit()
    {
        LogInCustomer.Password = password; //await PasswordUtils.HashPassword(password);
        LogInCustomer = await CustomerService.LogIn(LogInCustomer);
        if (LogInCustomer == null)
        {
            Console.WriteLine("Could not log in");
        }
        else
        {
            UserSession.UserId = LogInCustomer.CustomerId;
            NavigationManager.NavigateTo("/");
        }
    }
}