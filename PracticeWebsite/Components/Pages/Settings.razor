@page "/settings"

<MudContainer Class="mx-auto pa-6">
    <MudCardHeader>
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12">
                <MudCard Class="pa-md-6 mx-lg-auto d-flex align-center flex-grow-1 gap-4">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Align="Align.Center" Typo="Typo.h2">Account Settings</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudDivider f/>
                    <MudCardContent>
                        <MudText Typo="Typo.body2">Here you can modify and personalise your account and view any information we store about you to be fully clear with you.</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
        <MudDivider/>
        <MudGrid>
            <MudItem xs="6">
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h4">Personal Data</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                </MudCard>
            </MudItem>
            <MudItem xs="6">
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h4">Acessibility Settings</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                </MudCard>
            </MudItem>
        </MudGrid>
    </MudCardHeader>
</MudContainer>








